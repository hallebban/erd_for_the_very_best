<div class="page-header">
  <h1>
    Best ats
    <a href="/best_ats/new" class="btn btn-lg btn-success">New Best at</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Dish</th>
        <th>Actions</th>
      </tr>

      <% @best_ats.each do |best_at| %>
      <tr>
        <td><%= best_at.user_id %></td>
        <td><%= best_at.dish_id %></td>
        <td>
          <a href="/best_ats/<%= best_at.id %>" class="btn btn-primary">Show</a>
          <a href="/best_ats/<%= best_at.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_best_at/<%= best_at.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @best_ats, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
